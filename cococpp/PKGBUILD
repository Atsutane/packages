# Contributor: Thorsten Toepper <atsutane@freethoughts.de>

pkgname=cococpp
pkgver=20090327
pkgrel=1
pkgdesc="Coco is a compiler generator"
arch=('i686' 'x86_64')
url="http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/#CPP"
license=('GPL')
makedepends=('unzip')
source=("http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/CPP/CocoSourcesCPP.zip"
        "http://www.ssw.uni-linz.ac.at/Research/Projects/Coco/Doc/license.txt")
md5sums=('e19f71381d5cd2b5325dda33c8dfbb27'
         '70ff85f9908c38e9542a0bae936e36f6')
noextract=("CocoSourcesCPP.zip")
build() {
  cd "$srcdir"
  mkdir "$pkgname"
  unzip CocoSourcesCPP.zip -d $pkgname/ || return 1
  cd "$pkgname"
  chmod +x build.sh
  ./build.sh --help ||return 1

  install -D -m755 ${srcdir}/${pkgname}/Coco $pkgdir/usr/bin/cococpp
  install -D -m644 ${srcdir}/license.txt \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

# vim:set ts=2 sw=2 et:
