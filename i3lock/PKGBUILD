# Contributor: Thorsten Toepper <atsutane@freethoughts.de>

pkgname=i3lock
pkgver=0.9
pkgrel=1
pkgdesc="A slightly improved version of slock"
arch=('i686' 'x86_64')
url="http://i3.zekjur.net/i3lock/"
license=('MIT')
depends=()
makedepends=()
provides=()
conflicts=('i3lock-git')
replaces=()
backup=()
options=()
install=
source=(http://i3.zekjur.net/i3lock/$pkgname-$pkgver.tar.gz)
md5sums=('a966633ba348ca348ee31ccc072d9bc4')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  sed -i 's+/usr/X11R6+/usr+' config.mk || return 1

  make || return 1
  make DESTDIR="$pkgdir/" clean install
  
  install -Dm644 LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

# vim:set ts=2 sw=2 et:

