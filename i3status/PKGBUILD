# Contributor: Thorsten Toepper <atsutane at freethoughts dot de>

pkgname=i3status
pkgver=2.0
pkgrel=1
pkgdesc="Generates status bar to use with dzen2 or xmobar"
arch=('i686' 'x86_64')
url="http://i3.zekjur.net/i3status/"
license=('BSD')
depends=('wireless_tools' 'confuse')
options=('docs')
source=(http://i3.zekjur.net/i3status/$pkgname-$pkgver.tar.bz2
        'LICENSE')
md5sums=('0718095874aed604fe58a7de08cde530'
         '925ce69cf4db2b73e206794faec0336c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install || return 1
  install -Dm644 $srcdir/LICENSE \
      $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1

  make clean  
}

# vim:set ts=2 sw=2 et:

