# Contributor: Thorsten Toepper <atsutane at freethoughts dot de>

pkgname=i3status
pkgver=1.2
pkgrel=2
pkgdesc="Generates status bar to use with dzen2 or wmii"
arch=('i686' 'x86_64')
url="http://i3.zekjur.net/i3status/"
license=('BSD')
depends=('glibc')
options=('docs')
source=(http://i3.zekjur.net/i3status/$pkgname-$pkgver.tar.bz2
        'LICENSE')
md5sums=('912fc395c70991d15ab009f90d430076'
         '925ce69cf4db2b73e206794faec0336c')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  # Comment this out if you want to use i3status with wmii
  echo "CFLAGS+=-DDZEN" >> Makefile

  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make DESTDIR="$pkgdir" install || return 1
  install -Dm644 $srcdir/LICENSE \
      $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1

  make clean  
}

# vim:set ts=2 sw=2 et:

