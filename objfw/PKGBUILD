# Maintainer: Thorsten TÃ¶pper <atsutane at freethoughts dot de>

pkgname=objfw
pkgver=0.2
pkgrel=1
pkgdesc="A portable framework for the Objective C language."
arch=('i686' 'x86_64')
url="https://webkeks.org/objfw"
license=('custom:QPL')
depends=('gcc-libs' 'sh')
makedepends=('mercurial' 'gcc-objc')
source=(https://webkeks.org/objfw/downloads/$pkgname-$pkgver.tar.gz)
md5sums=('2c4cfdb30943cbf57f08e3e6c4851615')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  ./autogen.sh
  ./configure --prefix=/usr || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install || return 1
  install -Dm644 LICENSE \
     ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

# vim:set ts=2 sw=2 et:
