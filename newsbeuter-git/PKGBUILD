# Contributor: Thorsten Toepper <atsutane@freethoughts.de>

pkgname=newsbeuter-git
pkgver=20090224
pkgrel=4
pkgdesc="A RSS feed reader for the text console with special Podcast support."
url="http://www.newsbeuter.org"
arch=('i686' 'x86_64')
license=('custom:MIT')
depends=('ruby' 'sqlite3' 'curl' 'libxml2')
makedepends=('git' 'swig' 'stfl' 'cococpp' 'asciidoc')
options=('docs' '!libtool')
conflicts=('newsbeuter')
replaces=()
backup=()
install=('newsbeuter-git.install')
source=(newsbeuter-git.install
        newsbeuter-archlinux.patch)
md5sums=('93a7a02dc0f6bc53a09f6362a80de652'
         '8894127c9264c852589a98db1a40f37c')

_gitroot="git://github.com/akrennmair/newsbeuter.git"
_gitname="newsbeuter"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
  cd $_gitname && git pull origin
  msg "The local files are updated."
  else
  git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  cp -r "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
  msg "Patching for gcc 4.3 ..."
  patch -p0 < $startdir/newsbeuter-archlinux.patch || return 1

  ./config.sh || return 1
  sed -i 's+/usr/local+/usr+' Makefile || return 1
  make || return 1
  make doc
  make DESTDIR=${pkgdir} install || return 1
  install -Dm644 LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1

}

