# Maintainer: Thorsten TÃ¶pper <atsutane-tu@freethoughts.de>

pkgname=i3bar
pkgver=0.6
pkgrel=1
pkgdesc="An xcb-based status- and ws-bar for i3"
arch=('i686' 'x86_64')
url="http://git.merovius.de/i3bar/"
license=('BSD')
groups=('i3')
depends=('libx11' 'yajl' 'libev')
# If you don't use a chroot and use i3-git
# replace the i3-wm makedependency with that.
makedepends=('pkgconfig' 'asciidoc' 'i3-wm')
conflicts=('i3bar-git')
source=("http://git.merovius.de/i3bar/snapshot/$pkgname-$pkgver.tar.bz2")
md5sums=('3d4c462d3367183a7f5240edb6569640') #generate with 'makepkg -g'

build() {
  cd "$srcdir/$pkgname-$pkgver"

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/i3bar/LICENSE"
}

# vim:set ts=2 sw=2 et:
