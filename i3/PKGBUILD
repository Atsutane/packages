# Contributor: Thorsten Toepper <atsutane at freethoughts dot de>

pkgname=i3
pkgver=3.a_bf2
_pkgver=3.a-bf2
pkgrel=1
pkgdesc="An improved dynamic tiling window manager"
arch=('i686' 'x86_64')
url="http://i3.zekjur.net/"
license=('BSD')
depends=('libx11' 'xcb-util')
makedepends=('asciidoc' 'docbook-xsl')
optdepends=('dmenu' 'i3lock' 'i3status')
options=('docs' '!strip')
source=(http://i3.zekjur.net/downloads/$pkgname-$_pkgver.tar.bz2)
md5sums=('de67d1353b83cf38064d761879a1e224')

build() {
  cd "$srcdir/$pkgname-$_pkgver"
  
  make || return 1
  make -C man || return 1
  make DESTDIR="$pkgdir/" install
  
  install -Dm644 man/i3.1 \
    ${pkgdir}/usr/share/man/man1/i3.1 || return 1
  install -Dm644 LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

# vim:set ts=2 sw=2 et:

