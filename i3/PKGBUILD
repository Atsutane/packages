# Contributor: Thorsten Toepper <atsutane@freethoughts.de>

pkgname=i3
pkgver=3.a
pkgrel=1
pkgdesc="An improved dynamic tiling window manager"
arch=('i686' 'x86_64')
url="http://i3.zekjur.net/"
license=('BSD')
depends=('xcb-proto' 'libxcb' 'xcb-util' 'dmenu')
makedepends=('asciidoc' 'docbook-xsl')
provides=()
conflicts=('i3-git')
options=('docs')
install=
source=(http://i3.zekjur.net/downloads/$pkgname-$pkgver.tar.bz2)
md5sums=('8fb5254ac07e21c0f2b118d7b02c1114')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  
  make || return 1
  make -C man || return 1
  make DESTDIR="$pkgdir/" install
  
  mkdir -p ${pkgdir}/usr/share/man/man1

  install -Dm644 man/i3.1 ${pkgdir}/usr/share/man/man1/i3.1 || return 1
  install -Dm644 LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

# vim:set ts=2 sw=2 et:

