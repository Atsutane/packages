# Maintainer: Thorsten Toepper <atsutane at freethoughts dot de>

pkgname=objfw-hg
pkgver=562
pkgrel=1
pkgdesc="A portable framework for the Objective C language."
arch=('i686' 'x86_64')
url="https://webkeks.org/objfw"
license=('custom:QPL')
provides=('libobjfw' 'libobjfw-hg')
conflicts=('libobjfw')
replaces=('libobjfw-hg')
depends=('gcc-libs' 'sh')
makedepends=('mercurial' 'gcc-objc')
optdepends=('gcc-objc: For active usage of this framework.')a

_hgroot=https://webkeks.org/hg
_hgrepo=objfw

build() {
	cd "${srcdir}"

	if [ -d "$_hgrepo" ]; then
		cd "${srcdir}/${_hgrepo}"
    hg pull -u
	else
		hg clone "${_hgroot}/${_hgrepo}" || return 1
	fi

	msg "Mercurial checkout done or server timeout"
	msg "Starting make..."

  rm -rf "${srcdir}/${_hgrepo}-build"
	cp -r "${srcdir}/${_hgrepo}" "${srcdir}/${_hgrepo}-build"
	cd "${srcdir}/${_hgrepo}-build"
	
  ./autogen.sh
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
  cd "${srcdir}/${_hgrepo}-build"
	make DESTDIR=${pkgdir} install || return 1

  install -Dm644 LICENSE \
    ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
}

# vim:set ts=2 sw=2 et:

